{
  "manifest_version": 3,
  "name": "WhatNot Mod Helper Tools Extension",
  "version": "0.0.1",
  "description": "Helper tools for WhatNot stream moderators",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.whatnot.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.whatnot.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
