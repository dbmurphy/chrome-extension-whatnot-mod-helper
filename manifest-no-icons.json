{
  "manifest_version": 3,
  "name": "Whatnot Buyers Extractor",
  "version": "1.0.0",
  "description": "Extract a list of buyers from Whatnot stream pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.whatnot.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.whatnot.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
